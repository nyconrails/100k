%html
  %head
    %meta{:content => "text/html; charset=iso-8859-1", "http-equiv" => "Content-Type"}/
    %title 100Kin10
  %body{:leftmargin => "0", :marginheight => "0", :marginwidth => "0", :topmargin => "0"}
    = "Hi, below contact has requested some queries:"
    %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "596"}
      %tr
        %td{:align => "left", :style => "padding:10px; font-family:Arial, Helvetica, sans-serif; font-size:14px; color:#444444; line-height:18px;", :valign => "top", :width => "100%"}
          %strong First Name:
          = @contactus_details.firstname
      %tr
        %td{:align => "left", :style => "padding:10px; font-family:Arial, Helvetica, sans-serif; font-size:14px; color:#444444; line-height:18px;", :valign => "top", :width => "100%"}
          %strong Last Name:
          = @contactus_details.lastname
      %tr
        %td{:align => "left", :style => "padding:10px; font-family:Arial, Helvetica, sans-serif; font-size:14px; color:#444444; line-height:18px;", :valign => "top", :width => "100%"}
          %strong Organization:
          = @contactus_details.organization.blank? ? "N/A" : @contactus_details.organization
      %tr
        %td{:align => "left", :style => "padding:10px; font-family:Arial, Helvetica, sans-serif; font-size:14px; color:#444444; line-height:18px;", :valign => "top", :width => "100%"}
          %strong Title:
          = @contactus_details.title.blank? ? "N/A" : @contactus_details.title
      %tr
        %td{:align => "left", :style => "padding:10px; font-family:Arial, Helvetica, sans-serif; font-size:14px; color:#444444; line-height:18px;", :valign => "top", :width => "100%"}
          %strong Phone Number:
          = @contactus_details.phonenumber
      %tr
        %td{:align => "left", :style => "padding:10px; font-family:Arial, Helvetica, sans-serif; font-size:14px; color:#444444; line-height:18px;", :valign => "top", :width => "100%"}
          %strong Email Address:
          = @contactus_details.emailid
      %tr
        %td{:align => "left", :style => "padding:10px; font-family:Arial, Helvetica, sans-serif; font-size:14px; color:#444444; line-height:18px;", :valign => "top", :width => "100%"}
          %strong Question asked:
          = @contactus_details.question
      %tr
        %td{:align => "left", :style => "padding:10px; font-family:Arial, Helvetica, sans-serif; font-size:14px; color:#444444; line-height:18px;", :valign => "top", :width => "100%"}
          %strong Reason Specified:
          = @contactus_details.reason