    %title 100Kin10
  %body{:leftmargin => "0", :marginheight => "0", :marginwidth => "0", :topmargin => "0"}
    %table{:border => "0", :cellpadding => "15", :cellspacing => "0", :width => "100%"}
      %tr
        %td{:align => "center", :bgcolor => "#4f5257", :valign => "middle"}
          %table{:bgcolor => "#222222", :border => "0", :cellpadding => "0", :cellspacing => "1", :width => "600"}
            %tr
              %td{:align => "left", :bgcolor => "#FFFFFF", :valign => "top"}
                %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
                  %tr
                    %td{:align => "left", :background => "http://good100k.heroku.com/assets/100kin10.gif", :bgcolor => "#ffc427", :height => "100", :style => "padding-left:10px; padding-right:10px;", :valign => "middle"}
