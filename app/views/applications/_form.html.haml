  $(document).ready(function() {

    $('#application_save').click(function() {
      $('#application_type').val('save');

    });

    $('#application_submit').click(function() {
      $('#application_type').val('submit');
    });
        
    $("form").validate({
      onkeyup: false,
      submitHandler: function(form) {
        form.submit();
        return false;
      }
    });

  });

